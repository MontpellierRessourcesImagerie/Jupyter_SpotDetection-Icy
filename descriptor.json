{
    "command-line": "[CYTOMINE_HOST] [CYTOMINE_PUBLIC_KEY] [CYTOMINE_PRIVATE_KEY] [CYTOMINE_ID_PROJECT] [CYTOMINE_ID_SOFTWARE] [ICY_SCALE3SENSITIVITY]",
    "container-image": {
        "image": "urubens/w_spotdetection-icy",
        "index": "docker",
        "type": "singularity"
    },
    "name": "SpotDetection-Icy",
    "description": "SpotDetection-Icy, a software to detect spots with Icy.",
    "inputs": [
           	{
            "id": "cytomine_host", 
            "value-key": "[@ID]",
            "command-line-flag": "--@id", 
            "name": "Cytomine host", 
            "set-by-server": true,
            "optional": false, 
            "type": "String"
        },
        {
            "id": "cytomine_public_key", 
            "value-key": "[@ID]",
            "command-line-flag": "--@id", 
            "name": "Cytomine public key", 
            "set-by-server": true,
            "optional": false, 
            "type": "String"
        },
        {
            "id": "cytomine_private_key", 
            "value-key": "[@ID]",
            "command-line-flag": "--@id", 
            "name": "Cytomine public key", 
            "set-by-server": true,
            "optional": false, 
            "type": "String"
        },
        {
            "id": "cytomine_id_project", 
            "value-key": "[@ID]",
            "command-line-flag": "--@id", 
            "name": "Cytomine project ID", 
            "set-by-server": true,
            "optional": false, 
            "type": "Number"
        },
        {
            "id": "cytomine_id_software", 
            "value-key": "[@ID]",
            "command-line-flag": "--@id", 
            "name": "Cytomine software ID", 
            "set-by-server": true,
            "optional": false, 
            "type": "Number"
        },
        {
            "id": "icy_scale3sensitivity",
            "value-key": "[@ID]",
            "command-line-flag": "--@id", 
            "name": "Scale sensitivity",
            "description": "See Icy documentation",
            "default-value": 40,
            "optional": true,
            "set-by-server": false,
            "type": "number",
            "minimum": 1,
            "maximum": 100
        }
    ],
    "schema-version": "cytomine-0.1"
}
